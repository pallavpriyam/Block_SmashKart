{
  "manifest_version": 3,
  "name": "URL Countdown Blocker",
  "version": "1.0",
  "description": "Blocks specific URLs after a countdown.",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["https://smashkarts.io/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://smashkarts.io/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
